<mvc:View
	controllerName="sap.ui.demo.basicTemplate.controller.Main"
	xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
	displayBlock="true"
	xmlns="sap.m"
    xmlns:semantic="sap.f.semantic">
    <semantic:SemanticPage id="mainPage"
            class="detailPage">
        <semantic:titleHeading>
            <Title text="Herzlich Willkommen bei Inwerken! 🚀" />
        </semantic:titleHeading>
        <semantic:content>
         <FlexBox justifyContent="Center" direction="Column" class="sapUiResponsivePadding" height="80%">
            <Image src="images/Header_Herbst_Inwerken_Zentrale_2022-4.webp"
            width="100%"/>
            <l:BlockLayout id="BlockLayout" background="Light">
                <l:BlockLayoutRow>
                    <l:BlockLayoutCell title="❤️ Was macht Inwerken?">
                        <Text
                            id="text1"
                            wrappingType="Hyphenated"
                            text="Wir sind eine professionelle und unternehmensnahe IT-Beratung und wollen anderen Menschen die Arbeit einfacher machen." />
                    </l:BlockLayoutCell>
                    <l:BlockLayoutCell title="🤔 Warum Inwerken?">
                        <Text
                            id="text3"
                            wrappingType="Hyphenated"
                            text="Inwerken ist ein sehr attraktiver Arbeitgeber und bietet ganz besondere Vorteile, sprich uns einfach an." />
                    </l:BlockLayoutCell>
                    <l:BlockLayoutCell title="😊 Was kannst Du bei Inwerken machen?">
                        <Text
                            id="text2"
                            wrappingType="Hyphenated"
                            text="Du kannst bei uns als Auszubildende*r, dual Studierende*r oder Werkstudierende*r einen ganz besonderen Arbeitsplatz kennenlernen. Mit deinen Fähigkeiten kannst Du dich in den Bereichen IT und SAP oder in der Verwaltung etablieren, um deine Karriere zu starten und interessante Einblicke zu erhalten." />
                    </l:BlockLayoutCell>
                    <l:BlockLayoutCell title="📜 Wie kann ich mich bewerben?" >
                            <Text
                            id="text4"
                            class="sapUiTinyMarginBottom"
                            wrappingType="Hyphenated"
                            text="Du kannst uns einfach ansprechen und wir werden Dir alles erzählen, was du dafür benötigst. Keine Sorge, es ist ganz einfach!" />
                            <FlexBox class="sapUiContentPadding" direction="Column">
                            <Link text="🔗 Auszubildende*r Fachrichtung Fachinformatik" href="assets/Auszubildende%20Fachinformatik%20mit%20Fachrichtung%20Systemintegration%20(m_w_d)%202022.html" target="_blank" />
                            <Link text="🔗 Auszubildende*r Fachrichtung Systemintegration" href="assets/Auszubildende%20Fachinformatik%20mit%20Fachrichtung%20Systemintegration%20(m_w_d)%202022.html" target="_blank" />
                            <Link text="🔗 Dual Studierende*r" href="assets/Duales%20Studium_%20Wirtschaftsinformatik%20B.Sc.%20–%20Isernhagen%20bei%20Hannover.html" target="_blank" />
                            <Link text="🔗 Werkstudierende*r" href="assets/Werkstudent%20(m_w_d)%20im%20Personal%20-%20Isernhagen,%20Hannover%20–%20Inwerken.html" target="_blank" />
                        </FlexBox>
                    </l:BlockLayoutCell>
                </l:BlockLayoutRow>
                    <!-- <l:BlockLayoutRow>
                        <l:BlockLayoutCell title="📧 Infos an mich senden" >
                        <FlexBox justifyContent="Start" direction="Row">
                            <Input id="mailInput" width="500px" placeholder="Deine E-Mail Adresse..." class="sapUiTinyMarginEnd"/>
                            <Button text="Infos senden" press="sendMail"/>
                        </FlexBox>
                        </l:BlockLayoutCell>
                    </l:BlockLayoutRow> -->
            </l:BlockLayout>
         </FlexBox>
        </semantic:content>
    </semantic:SemanticPage>
</mvc:View>