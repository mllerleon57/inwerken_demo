<mvc:View
	controllerName="sap.ui.demo.basicTemplate.controller.GameEnd"
	xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
	displayBlock="true"
	xmlns="sap.m"
    xmlns:semantic="sap.f.semantic">
    <semantic:SemanticPage id="gameEnd"
            class="detailPage"
            visible="true">
            <semantic:titleHeading>
            <Title text="🎁 Herlichen Glückwünsch!" />
        </semantic:titleHeading>
        <semantic:content>
             
                <FlexBox justifyContent="Center" direction="Column" class="sapUiResponsivePadding" height="80%">
                    <Image src="images/Handschlag_Geschäftlich_Mann_und_Frau.png"
                width="100%"/>
                    <l:BlockLayout id="BlockLayout" background="Light">
                        <l:BlockLayoutRow>
                            <l:BlockLayoutCell title="Du hast es geschafft!">
                                <Text
                                    id="text1"
                                    wrappingType="Hyphenated"
                                    text="Wir sind stolz auf dich! Bewirb Dich jetzt bei uns und starte in Deine Zukunft!" />
                            </l:BlockLayoutCell>
                        </l:BlockLayoutRow>
                    </l:BlockLayout>
                 </FlexBox>
        </semantic:content>
    </semantic:SemanticPage>
</mvc:View>